{
  "name": "sciurus",
  "description": "A lightweight, TypeScript-based implementation of Bevy.",
  "version": "0.0.3",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    }
  },
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "monoup build",
    "test": "vitest",
    "clean": "monoup clean",
    "lint": "eslint packages/*/src/**/*.ts packages/*/test/**/*.ts src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts packages/*/test/**/*.ts src/**/*.ts",
    "prepub": "yarn format && yarn lint && yarn clean && yarn build && yarn test run",
    "publish": "yarn workspaces foreach -R npm publish",
    "ver": "monoup version"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.19.0",
    "minigame-api-typings": "^3.8.7",
    "monoup": "^0.2.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rustable": "^0.3.17",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "3.0.4"
  },
  "author": "illuxiza",
  "repository": {
    "type": "git",
    "url": "https://github.com/illuxiza/sciurus"
  },
  "bugs": {
    "url": "https://github.com/illuxiza/sciurus/issues"
  },
  "dependencies": {
    "@sciurus/app": "workspace:*",
    "@sciurus/ecs": "workspace:*",
    "@sciurus/utils": "workspace:*"
  },
  "peerDependencies": {
    "rustable": "^0.3.14"
  },
  "homepage": "https://github.com/illuxiza/sciurus#readme",
  "license": "MIT",
  "packageManager": "yarn@4.6.0",
  "publishConfig": {
    "access": "public"
  }
}
